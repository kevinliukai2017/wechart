<!DOCTYPE html>
<html xmlns:th="http://www.thymeleaf.org" lang="zh">
<head>
<meta charset="UTF-8" />
<meta name="viewport"
	content="width=device-width,initial-scale=1,user-scalable=0" />
<title>登录</title>
<!-- 引入 WeUI -->
<link rel="stylesheet" th:href="@{/css/weui/dist/style/weui.css}" />
<!-- 转盘css -->
<link rel="stylesheet" th:href="@{/css/lottery/style.css}" />
<!-- 引入js -->
<script th:src="@{/js/weuijs/dist/weui.js}" type="text/javascript"></script>
<script th:src="@{/js/jquery-3.2.1.js}" type="text/javascript"></script>
<style type="text/css">
.loading_css p {
	color: white;
}
</style>
</head>
<body>

	<div class="weui-panel weui-panel_access">
		<div class="weui-panel__hd">
			<h1>用户登录</h1>
		</div>
		<div class="weui-panel__bd">
			<form name="login_form" id="login_form" action="/login" method="post">
				<div class="weui-cells weui-cells_form" id="we_login_form">
					<div class="weui-cell">
						<div class="weui-cell__hd">
							<label class="weui-label">用户名</label>
						</div>
						<div class="weui-cell__bd">
							<input name="username" class="weui-input" type="tel" required
								pattern="[0-9]{11}" placeholder="手机号" emptyTips="手机号不能为空"
								notMatchTips="请输入正确的手机号">

						</div>
					</div>
					<div class="weui-cell">
						<div class="weui-cell__hd">
							<label class="weui-label">密码</label>
						</div>
						<div class="weui-cell__bd">
							<input name="password" class="weui-input" type="password" required
								emptyTips="密码不能为空" placeholder="请输入手密码">
						</div>
					</div>


				</div>
			</form>

		</div>
	</div>

	<div class="weui-btn-area" style="margin-top: 50px">
		<a href="javascript:;" class="weui-btn weui-btn_primary"
			id="login_button">登录</a> <a href="javascript:;"
			class="weui-btn weui-btn_default" id="reg_button">注册</a>
	</div>


	<div class="weui-footer weui-footer_fixed-bottom">
		<p class="weui-footer__text">Copyright &copy; 2008-2016
			herocenter.cn</p>
	</div>

	<script th:inline="javascript" type="text/javascript">
		$(function() {
			$("#login_button").click(function() {
				weui.form.validate('#we_login_form', function(error) {
					if (!error) {
						var loading = weui.loading('登录中...', {
							className : 'loading_css'
						});
						
						$("#login_form").submit();
					}
					;
				})
				// return true; // 当return true时，不会显示错误
			});

			$("#reg_button").click(function() {
				weui.alert('暂未开放注册,尽请期待~', {
					title : '抱歉'
				});
			});
		});
	</script>


</body>
</html>